<?xml version="1.0" encoding="utf-8" ?>

<Defs>

    <ThingDef ParentName="RB_WallBase">
        <defName>HRK_RusticEmbrasure</defName>
        <label>rustic embrasure</label>
        <thingClass>Building</thingClass>
        <category>Building</category>
        <description>A simplistic, weak and impassable wall with a firing port to allow shooting from relative safety. Capable of holding up a roof.</description>
        <graphicData>
            <texPath>Things/Building/Linked/RusticEmbrasure</texPath>
            <graphicClass>Graphic_Appearances</graphicClass>
            <linkType>CornerFiller</linkType>
            <linkFlags>
                <li>Wall</li>
                <li>Rock</li>
            </linkFlags>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
                <edgeTop>Damage/Edge</edgeTop>
                <edgeBot>Damage/Edge</edgeBot>
                <edgeLeft>Damage/Edge</edgeLeft>
                <edgeRight>Damage/Edge</edgeRight>
            </damageData>
        </graphicData>
        <uiIconPath>Things/Building/Linked/RusticEmbrasure/HRK_RusticEmbrasureSmooth_Icon</uiIconPath>
        <uiIconPathsStuff>
            <li>
                <appearance>Planks</appearance>
                <iconPath>Things/Building/Linked/RusticEmbrasure/HRK_RusticEmbrasurePlanks_Icon</iconPath>
            </li>
            <li>
                <appearance>Bricks</appearance>
                <iconPath>Things/Building/Linked/RusticEmbrasure/HRK_RusticEmbrasureBricks_Icon</iconPath>
            </li>
        </uiIconPathsStuff>
        <statBases>
            <MaxHitPoints>185</MaxHitPoints>
            <WorkToBuild>85</WorkToBuild>
            <Flammability>1.2</Flammability>
            <MeditationFocusStrength>0.11</MeditationFocusStrength>
        </statBases>
        <costStuffCount>5</costStuffCount>
        <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
        <altitudeLayer>Building</altitudeLayer>
        <passability>Impassable</passability>
        <castEdgeShadows>true</castEdgeShadows>
        <fillPercent>0.7</fillPercent>
        <coversFloor>true</coversFloor>
        <placingDraggableDimensions>1</placingDraggableDimensions>
        <tickerType>Never</tickerType>
        <rotatable>false</rotatable>
        <selectable>true</selectable>
        <neverMultiSelect>true</neverMultiSelect>
        <useStuffTerrainAffordance>true</useStuffTerrainAffordance>
        <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>        <!-- Best affordance needed for stone -->
        <holdsRoof>true</holdsRoof>
        <designationCategory>Structure</designationCategory>
        <staticSunShadowHeight>1</staticSunShadowHeight>
        <blockLight>false</blockLight>
        <disableImpassableShotOverConfigError>true</disableImpassableShotOverConfigError>
        <stuffCategories>
            <li>Metallic</li>
            <li>Woody</li>
            <li>Stony</li>
        </stuffCategories>
        <building>
            <paintable>true</paintable>
            <ai_chillDestination>false</ai_chillDestination>
            <isInert>true</isInert>
            <canPlaceOverWall>true</canPlaceOverWall>
            <blueprintGraphicData>
                <texPath>Things/Building/Embrasure/Embrasure_Blueprint_Atlas</texPath>
            </blueprintGraphicData>
        </building>
        <damageMultipliers Inherit="false">
            <li>
                <damageDef>Bomb</damageDef>
                <multiplier>3</multiplier>
            </li>
            <li>
                <damageDef>Thump</damageDef>
                <multiplier>4</multiplier>
            </li>
        </damageMultipliers>
    </ThingDef>
</Defs>