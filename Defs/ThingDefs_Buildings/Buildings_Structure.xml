<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>HRK_ReinforcedEmbrasure</defName>
    <label>reinforced embrasure</label>
    <thingClass>Building</thingClass>
    <category>Building</category>
    <description>A reinforced impassable wall, created by layering materials over eachother, with a firing port to allow shooting from relative safety. Capable of holding up a roof.</description>
    <graphicData>
      <texPath>Things/Building/Linked/ReinforcedEmbrasure/HRK_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>CornerFiller</linkType>
      <linkFlags>
        <li>Wall</li>
        <li>Rock</li>
      </linkFlags>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
        <edgeTop>Damage/Edge</edgeTop>
        <edgeBot>Damage/Edge</edgeBot>
        <edgeLeft>Damage/Edge</edgeLeft>
        <edgeRight>Damage/Edge</edgeRight>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Linked/ReinforcedEmbrasure/HRK_Icon</uiIconPath>
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
      <WorkToBuild>300</WorkToBuild>
      <Flammability>0.2</Flammability>
    </statBases>
    <costStuffCount>5</costStuffCount>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.7</fillPercent>
    <coversFloor>true</coversFloor>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <tickerType>Never</tickerType>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <useStuffTerrainAffordance>true</useStuffTerrainAffordance>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <holdsRoof>true</holdsRoof>
    <designationCategory>Structure</designationCategory>
    <staticSunShadowHeight>1</staticSunShadowHeight>
    <blockLight>false</blockLight>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <isInert>true</isInert>
      <canPlaceOverWall>true</canPlaceOverWall>
      <blueprintGraphicData>
        <texPath>Things/Building/Linked/ReinforcedEmbrasure/HRK_Blueprint</texPath>
      </blueprintGraphicData>
    </building>
    <researchPrerequisites>
      <li>SpacerFurniture</li>
    </researchPrerequisites>
  </ThingDef>

</Defs>